{
  "manifest_version": 3,
  "name": "YouTube Looper",
  "version": "0.1.0",
  "description": "Loop custom segments on YouTube without touching playback speed.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "YouTube Looper"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "assets/*",
        "chunks/*"
      ],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
